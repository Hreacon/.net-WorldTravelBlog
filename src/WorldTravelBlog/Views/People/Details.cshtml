@model WorldTravelBlog.Models.Person

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <div>
        @Html.DisplayNameFor(model=>model.Locations) : @Html.DisplayFor(model=>model.Locations.Count)
    </div>
    <ul>
        @foreach (var location in Model.Locations)
        {
            @Html.DisplayFor(model => location, "locations")
        }
    </ul>
    @Html.DisplayNameFor(model=>model.Experiences) : @Model.Experiences.Count
    <ul>
        @foreach (var experience in Model.Experiences)
        {
            @Html.DisplayFor(model=>experience, "experience")
        }
    </ul>
    add an experience:
    <ul>
        @foreach (var experience in ViewBag.Experiences)
        {
            @Html.DisplayFor(model => experience, "experience")
        }
    </ul>
    add a location:
    <ul>
        @foreach (var location in ViewBag.Locations)
        {
            @Html.DisplayFor(model => location, "location")
        }
    </ul>

</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.PersonId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
